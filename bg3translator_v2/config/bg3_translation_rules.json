{
  "_metadata": {
    "mod_name": "BetterElves",
    "version": "1.0",
    "description": "Règles spécifiques pour le mod BetterElves",
    "extends": "base_bg3_rules.json"
  },
  "pre_translation": [
    {
      "name": "protect_woodland_heritage",
      "pattern": "\\bWoodland Heritage\\b",
      "replacement": "WOODLAND_HERITAGE",
      "description": "Protège Patrimoine sylvestre"
    },
    {
      "name": "protect_arcane_ancestry", 
      "pattern": "\\bArcane Ancestry\\b",
      "replacement": "ARCANE_ANCESTRY",
      "description": "Protège Ancêtres des Arcanes"
    }
  ],
  "post_translation": [
    {
      "name": "fix_arcana_proficiency",
      "pattern": "\\bCompétence en arcanes\\b", 
      "replacement": "Maîtrise des Arcanes",
      "description": "Corrige la maîtrise des Arcanes"
    },
    {
      "name": "fix_arcana_tests",
      "pattern": "\\bAvantage sur les tests d'arcanes\\b",
      "replacement": "Avantage aux tests d'Arcanes", 
      "description": "Corrige les tests d'Arcanes"
    }
  ],
  "final_cleanup": [
    {
      "name": "restore_woodland_heritage",
      "pattern": "\\bWOODLAND_HERITAGE\\b",
      "replacement": "Patrimoine sylvestre",
      "description": "Restaure Patrimoine sylvestre"
    },
    {
      "name": "restore_arcane_ancestry",
      "pattern": "\\bARCANE_ANCESTRY\\b", 
      "replacement": "Ancêtres des Arcanes",
      "description": "Restaure Ancêtres des Arcanes"
    }
  ]
}

