{
  "_metadata": {
    "mod_name": "BetterBattleAxes", 
    "version": "1.0",
    "description": "Règles spécifiques pour le mod BetterBattleAxes",
    "extends": "base_bg3_rules.json"
  },
  "post_translation": [
    {
      "name": "fix_hook_strike",
      "pattern": "\\bFrappe de crochet\\b",
      "replacement": "Frappe au grappin",
      "description": "Traduit Hook Strike"
    },
    {
      "name": "fix_shield_hook",
      "pattern": "\\bCrochet de bouclier\\b",
      "replacement": "Crochet bouclier", 
      "description": "Traduit Shield Hook"
    },
    {
      "name": "fix_spike_strike",
      "pattern": "\\bFrappe à pointes\\b",
      "replacement": "Frappe perforante",
      "description": "Traduit Spike Strike"
    },
    {
      "name": "fix_silenced_state",
      "pattern": "\\bau silence\\b",
      "replacement": "par l'état Silencieux", 
      "description": "Corrige l'état Silencieux"
    },
    {
      "name": "fix_movement_prevention",
      "pattern": "\\bvous empêchant tous (les )?deux de (bouger|vous déplacer)\\b",
      "replacement": "vous empêchant tous deux de vous déplacer",
      "description": "Corrige l'empêchement de mouvement"
    }
  ]
}

