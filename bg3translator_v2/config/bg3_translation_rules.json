{
  "_metadata": {
    "mod_name": "BetterBows",
    "version": "1.0",
    "description": "Règles spécifiques pour le mod BetterBows", 
    "extends": "base_bg3_rules.json"
  },
  "post_translation": [
    {
      "name": "fix_rapid_fire",
      "pattern": "\\bTir rapide\\b",
      "replacement": "Tir rapide",
      "description": "Traduit Rapid Fire"
    },
    {
      "name": "fix_multi_shot", 
      "pattern": "\\bFlèches multiples\\b",
      "replacement": "Volée", 
      "description": "Traduit Multi Shot comme Volée"
    },
    {
      "name": "fix_titan_string",
      "pattern": "\\bCorde de titan\\b",
      "replacement": "Corde de titan",
      "description": "Traduit Titan String"
    },
    {
      "name": "fix_taut_string",
      "pattern": "\\bCorde tendue\\b", 
      "replacement": "Corde tendue",
      "description": "Traduit Taut String"
    },
    {
      "name": "fix_two_shots",
      "pattern": "\\b(Effectuez|Faire) deux tirs\\b",
      "replacement": "Effectuer deux tirs",
      "description": "Normalise 'effectuer deux tirs'"
    },
    {
      "name": "fix_attack_penalty",
      "pattern": "\\bpénalité de -(\\d+) (à l'|au jet d')attaque\\b",
      "replacement": "pénalité de -\\1 au jet d'attaque", 
      "description": "Normalise les pénalités d'attaque"
    },
    {
      "name": "fix_strength_modifier",
      "pattern": "\\bmodificateur de force\\b",
      "replacement": "modificateur de Force",
      "description": "Met Force avec majuscule"
    }
  ]
}